<body>
<%- include('../partials/_navbar.ejs') %>

<link rel="stylesheet" href="/stylesheets/profile.css" />

<div class="profile-container">
<h1>Edit Your Profile</h1>

<form action="/profile/ <%= user._id %> /edit"  method="POST" enctype="multipart/form-data">
  <% console.log("this is userimage",user.profileImage) %>
  <div class="profile-info">
    <img src="/uploads/<%= user.profileImage %>" alt="profile picture" />
    <div>
  <input type="file" name="image" id="image" accept="image/*" />
  <div>
  <label for="Username">Username:</label>
  <input type="text" name="username" id="Username" value="<%= user.username %>">
</div>

  <br>

  <div class="form-group">
  <label for="Age" class="label">Age:</label>
  <input type="number" name="age" value="<%= user.age %>" class="form-control" required>
</div>

  <br>

  <div class="form-group">
  <label for="Nationality" class="label">Nationality:</label>
  <input type="text" name="nationality" id="Nationality" value="<%= user.nationality %>" class="form-control" required>
</div>

  <br>

  <div>
    <label class="label" for="gender">Gender:</label>
    <select name="gender" id="gender" class="value">
      <option value="Male" <%= user.gender === "Male" ? "selected" : "" %>>
        Male
      </option>
      <option
        value="Female"
        <%= user.gender === "Female" ? "selected" : "" %>
      >
        Female
      </option>
    </select>
</div>

  <br>

<div style="text-align: center; margin-top: 20px;">
  <button type="submit" class="button edit">Update</button>
  <a href="/profile/show" class="button cancel">Cancel</a>
</div>
</div>
</form>
</div>
</body>